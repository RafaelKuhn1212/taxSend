generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model config {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())
  
  maxPerHour Int
  maxPerDay Int 
  lastnotification DateTime
}

model sents {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())
  transactionId     String  @unique
  data Json
  source String @default("cashtime")
}
model sentsPending {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())
  data Json
  source String @default("cashtime")
}

model emailRefused {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())
  email String
  error String
}

